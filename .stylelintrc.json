{
  "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],
  "plugins": ["stylelint-order"],
  "rules": {
    "selector-class-pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*(?:__([a-z0-9]+(?:-[a-z0-9]+)*))?(?:_([a-z0-9]+(?:_[a-z0-9]+)*))?(?:_([a-z0-9]+(?:_[a-z0-9]+)*))?$",
    "media-feature-range-notation": "prefix",
    "order/order": [
      "custom-properties",
      "dollar-variables",
      "declarations",
      "at-rules",
      "rules"
    ]
  }
}
